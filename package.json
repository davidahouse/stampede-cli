{
  "name": "stampede-cli",
  "main": "bin/stampede-cli.js",
  "version": "0.1.0",
  "description": "A command line app for interacting with stampede",
  "license": "MIT",
  "repository": "davidahouse/stampede-cli",
  "preferGlobal": true,
  "bin": {
    "stampede-cli": "bin/stampede-cli.js"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "commander": "^2.19.0",
    "dateformat": "^3.0.3",
    "expand-template": "^2.0.3",
    "figlet": "^1.2.1",
    "ora": "^3.2.0",
    "pkginfo": "^0.4.1",
    "rc": "^1.2.8",
    "vorpal": "^1.12.0",
    "stampede-cache": "file:../stampede-cache"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-google": "^0.11.0"
  },
  "scripts": {
    "lint": "eslint $(find . -name \"*.js\" -not -path \"./node_modules/*\" -not -path \"./public/*\")",
    "lint-fix": "eslint --fix $(find . -name \"*.js\" -not -path \"./node_modules/*\" -not -path \"./public/*\")"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "impliedStrict": true
      },
      "sourceType": "module"
    },
    "rules": {
      "no-console": 0,
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  }
}
